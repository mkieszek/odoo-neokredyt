<?xml version="1.0" ?>
<openerp>
	<data>        
		<record model="ir.ui.view" id="view_neo_account_voucher_form">
			<field name="name">neo.account.voucher.form</field>
			<field name="model">account.voucher</field>
			<field name="inherit_id" ref="account_voucher.view_sale_receipt_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/group/group/field[@name='name']" position="after">
					<group string="Sposób zapłaty">
						<field name="payment_method" attrs="{'readonly': [('state','!=','draft')]}"/>
						<field name="bank_account_id" domain="[('partner_id', '=',partner_id)]" attrs="{'invisible': [('payment_method','=','Gotowka')],'readonly': [('state','!=','draft')]}"/>
						<field name="payment_date" attrs="{'invisible': [('payment_method','=','Gotowka')],'readonly': [('state','!=','draft')]}"/>
					</group>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='name']" position="after">
					<field name="quantity"/>
					<field name="measure"/>
					<field name="gross_amount"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='amount']" position="attributes">
					<attribute name="readonly">True</attribute>
                </xpath>
			</field>
		</record>
		
	</data>
</openerp>